@using System.Collections.Generic
@using EnsimagCafet.Domain.Identity
@using EnsimagCafet.Web.Models.Identity
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Identity
@model LoginViewModel
@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="card card-custom gutter-b">
            <div class="card-header">
                <div class="card-title">
                    <h2 class="card-label">Log in</h2>
                </div>
            </div>
            <div class="card-body">
                <form asp-controller="Identity" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group my-1">
                        <label asp-for="Login" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Login" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group my-1">
                        <label asp-for="Password" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Password" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group my-1">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group my-1">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-primary">Log in</button>
                        </div>
                    </div>
                    <p class="my-1">
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register as a new user?</a>
                    </p>
                    <p class="my-1">
                        <a asp-action="ForgotPassword">Forgot your password?</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
