@using EnsimagCafet.Domain.Identity
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a asp-controller="Account" asp-action="Index" class="mx-1 px-4 btn btn-active-light-primary btn-custom btn-text-light">@UserManager.GetUserName(User)</a>
    <form asp-controller="Identity" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <button type="submit" class="mx-1 px-4 btn btn-active-light-primary btn-custom btn-text-light">Log off</button>
    </form>
}
else
{
    <a asp-controller="Identity" asp-action="Register" class="mx-1 px-4 btn btn-active-light-primary btn-custom btn-text-light">Register</a>
    <a asp-controller="Identity" asp-action="Login" class="mx-1 px-4 btn btn-active-light-primary btn-custom btn-text-light">Log in</a>
}
