@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@inject IViewLocalizer localizer
@inject IOptions<RequestLocalizationOptions> locOptions

@{
    var culture = Context.Features.Get<IRequestCultureFeature>();
    var cultures = locOptions.Value.SupportedUICultures?.Select(x => new SelectListItem { Value = x.Name, Text = x.Name }).ToList();
    var redirectUri = string.IsNullOrWhiteSpace(Context.Request.Path) ? "~/" : $"~{Context.Request.Path}{Context.Request.QueryString}";
}

<div>
    @if (culture is not null && cultures is not null)
    {
        <form asp-controller="Culture" asp-action="Set" method="post" asp-route-redirectUri="@redirectUri">
            <select name="culture" asp-for="@culture.RequestCulture.UICulture.Name" asp-items="cultures" onchange="this.form.submit();"></select>
        </form>
    }
</div>
